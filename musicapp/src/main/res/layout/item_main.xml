        <ScrollView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">

                <ImageView
                    android:layout_marginTop="56dp"
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/banner2"/>

                <Button
                    android:id="@+id/btReproducir"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_margin="20dp"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:text="MusicApp la capital de la musica"
                    app:srcCompat="@drawable/ic_account"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Solo la mejor musica"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/teal"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Cientos y cientos de canciones
 directamente a la palma de tu mano,
 ¡No esperes más para escuchar a tu artista favorito!"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:padding="3dip"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_marginTop="56dp"
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/banner"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Los mejores descuentos"
                    android:textSize="25dp"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/teal"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="En MusicApp tenemos los mejores
descuentos consigue la musica que
más te gusta al mejor precio"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:padding="3dip"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_marginTop="56dp"
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/banner3"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="¿Tienes un genero favorito?"
                    android:textSize="25dp"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/teal"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Estamos seguro que aquí
lo encontraras"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:padding="3dip"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginBottom="80dp"/>
            </TableLayout>
        </ScrollView>